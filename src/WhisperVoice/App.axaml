<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="WhisperVoice.App"
             xmlns:local="using:WhisperVoice"
             RequestedThemeVariant="Dark">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Themes/DarkTheme.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon Icon="/Assets/icon.ico"
                      ToolTipText="Whisper Voice"
                      Clicked="TrayIcon_OnClicked">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Header="Whisper Voice" IsEnabled="False" />
                        <NativeMenuItemSeparator />
                        <NativeMenuItem Header="Show Main Window" Click="ShowWindow_OnClick" />
                        <NativeMenuItem Header="Hide Floating Bar" Click="HideFloatingBar_OnClick" />
                        <NativeMenuItemSeparator />
                        <NativeMenuItem Header="Quit" Click="QuitApp_OnClick" />
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>
</Application>
