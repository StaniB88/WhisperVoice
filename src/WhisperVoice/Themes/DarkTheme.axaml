<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Background layers (darkest â†’ lightest) -->
    <SolidColorBrush x:Key="BgPrimary" Color="#0f0f1a"/>
    <SolidColorBrush x:Key="BgSecondary" Color="#161625"/>
    <SolidColorBrush x:Key="BgTertiary" Color="#0c0c18"/>
    <SolidColorBrush x:Key="BgSurface" Color="#1a1a2e"/>
    <SolidColorBrush x:Key="BgAccent" Color="#1e3a5f"/>
    <SolidColorBrush x:Key="BgAccentHover" Color="#264b78"/>
    <SolidColorBrush x:Key="BgAccentDim" Color="#0a2440"/>
    <SolidColorBrush x:Key="BgHover" Color="#1e1e35"/>
    <SolidColorBrush x:Key="BgOverlay" Color="#18ffffff"/>
    <SolidColorBrush x:Key="BgOverlayBorder" Color="#22ffffff"/>
    <SolidColorBrush x:Key="BgFloating" Color="#DD0c0c18"/>
    <SolidColorBrush x:Key="BgAccentTint" Color="#110f3460"/>

    <!-- Accent colors -->
    <SolidColorBrush x:Key="Highlight" Color="#e94560"/>
    <SolidColorBrush x:Key="AccentBlue" Color="#3b82f6"/>
    <SolidColorBrush x:Key="AccentCyan" Color="#22d3ee"/>
    <SolidColorBrush x:Key="CloseButton" Color="#c42b1c"/>
    <SolidColorBrush x:Key="Success" Color="#34d399"/>

    <!-- Text hierarchy -->
    <SolidColorBrush x:Key="TextPrimary" Color="#e8e8f0"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#8888a0"/>
    <SolidColorBrush x:Key="TextMuted" Color="#5c5c78"/>
    <SolidColorBrush x:Key="TextDim" Color="#3e3e58"/>
    <SolidColorBrush x:Key="TextSubtle" Color="#2e2e48"/>
    <SolidColorBrush x:Key="TextStatusBar" Color="#5c5c78"/>
    <SolidColorBrush x:Key="TextWhite" Color="#f4f4fa"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderSubtle" Color="#18ffffff"/>
    <SolidColorBrush x:Key="BorderActive" Color="#3b82f6"/>

    <!-- State indicators -->
    <SolidColorBrush x:Key="IdleDot" Color="#00b4d8"/>
    <SolidColorBrush x:Key="ProcessingAmber" Color="#ffaa00"/>

    <!-- Mic ring tints (very low opacity fills for the mic button) -->
    <SolidColorBrush x:Key="MicRingTintIdle" Color="#0622d3ee"/>
    <SolidColorBrush x:Key="MicRingTintRecording" Color="#08e94560"/>

    <!-- Shadow -->
    <Color x:Key="ShadowColor">#000000</Color>

    <!-- Icon font -->
    <FontFamily x:Key="IconFont">Segoe MDL2 Assets</FontFamily>

    <!-- Raw Colors -->
    <Color x:Key="HighlightColor">#e94560</Color>
    <Color x:Key="AccentCyanColor">#22d3ee</Color>
    <Color x:Key="BgAccentColor">#1e3a5f</Color>
    <Color x:Key="BgSecondaryColor">#161625</Color>
    <Color x:Key="BgPrimaryColor">#0f0f1a</Color>

    <!-- Typography scale -->
    <x:Double x:Key="FontSizeXS">10</x:Double>
    <x:Double x:Key="FontSizeSM">11</x:Double>
    <x:Double x:Key="FontSizeBase">12</x:Double>
    <x:Double x:Key="FontSizeMD">13</x:Double>
    <x:Double x:Key="FontSizeLG">14</x:Double>
    <x:Double x:Key="FontSizeXL">16</x:Double>
    <x:Double x:Key="FontSize2XL">17</x:Double>
    <x:Double x:Key="FontSize3XL">20</x:Double>
    <x:Double x:Key="FontSize4XL">24</x:Double>
    <x:Double x:Key="FontSize5XL">26</x:Double>
    <x:Double x:Key="FontSize6XL">32</x:Double>
    <x:Double x:Key="FontSize7XL">36</x:Double>

    <!-- Corner radius scale -->
    <CornerRadius x:Key="RadiusXS">3</CornerRadius>
    <CornerRadius x:Key="RadiusSM">4</CornerRadius>
    <CornerRadius x:Key="RadiusMD">6</CornerRadius>
    <CornerRadius x:Key="RadiusLG">8</CornerRadius>
    <CornerRadius x:Key="RadiusXL">10</CornerRadius>
    <CornerRadius x:Key="Radius2XL">12</CornerRadius>
    <CornerRadius x:Key="Radius3XL">16</CornerRadius>
    <CornerRadius x:Key="RadiusFull">20</CornerRadius>
</ResourceDictionary>
