<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:WhisperVoice.ViewModels"
        xmlns:m="using:WhisperVoice.Models"
        xmlns:conv="using:WhisperVoice.Converters"
        x:Class="WhisperVoice.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="Whisper Voice"
        Width="800" Height="800"
        MinWidth="600" MinHeight="400"
        WindowStartupLocation="CenterScreen"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        Background="{DynamicResource BgPrimary}">

    <Window.Resources>
        <conv:BoolToColorConverter x:Key="BoolToColor"/>
    </Window.Resources>

    <Window.Styles>
        <!-- Base text -->
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
        </Style>

        <!-- Sidebar buttons -->
        <Style Selector="Button.sidebar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.sidebar:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource BgSecondary}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextWhite}"/>
        </Style>
        <Style Selector="Button.sidebar.active">
            <Setter Property="Background" Value="{DynamicResource BgAccent}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextWhite}"/>
        </Style>
        <Style Selector="Button.sidebar.active /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource BgAccent}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextWhite}"/>
        </Style>

        <!-- Titlebar buttons -->
        <Style Selector="Button.titlebar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextMuted}"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.titlebar:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource BgHover}"/>
        </Style>
        <Style Selector="Button.titlebar-close:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource CloseButton}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextWhite}"/>
        </Style>

        <!-- Primary button -->
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="{DynamicResource BgAccent}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextWhite}"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.primary:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource BgAccentHover}"/>
        </Style>

        <!-- Recording ring pulse animation -->
        <Style Selector="Ellipse.ring-pulse-recording">
            <Setter Property="RenderTransform">
                <ScaleTransform/>
            </Setter>
            <Style.Animations>
                <Animation Duration="0:0:1.5" IterationCount="INFINITE">
                    <KeyFrame Cue="0%">
                        <Setter Property="Opacity" Value="0.15"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                    </KeyFrame>
                    <KeyFrame Cue="50%">
                        <Setter Property="Opacity" Value="0.45"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="1.06"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1.06"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="0.15"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Processing ring pulse animation (faster) -->
        <Style Selector="Ellipse.ring-pulse-processing">
            <Setter Property="RenderTransform">
                <ScaleTransform/>
            </Setter>
            <Style.Animations>
                <Animation Duration="0:0:0.8" IterationCount="INFINITE">
                    <KeyFrame Cue="0%">
                        <Setter Property="Opacity" Value="0.2"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                    </KeyFrame>
                    <KeyFrame Cue="50%">
                        <Setter Property="Opacity" Value="0.5"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="1.05"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1.05"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="0.2"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="32,*,32">
        <!-- Custom titlebar -->
        <Grid Grid.Row="0" Background="{DynamicResource BgTertiary}" ColumnDefinitions="*,Auto" Name="TitleBar">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0">
                <TextBlock Text="Whisper Voice" FontSize="12" Foreground="{DynamicResource TextMuted}" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Classes="titlebar" Click="MinimizeClick">
                    <TextBlock Text="&#x2014;" FontSize="10" Foreground="{DynamicResource TextMuted}"/>
                </Button>
                <Button Classes="titlebar titlebar-close" Click="CloseClick">
                    <TextBlock Text="&#x2715;" FontSize="12" Foreground="{DynamicResource TextMuted}"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Main content area with sidebar -->
        <Grid Grid.Row="1" ColumnDefinitions="220,*">
            <!-- Sidebar -->
            <Border Grid.Column="0" Background="{DynamicResource BgTertiary}">
                <DockPanel>
                    <!-- Brand header with app icon -->
                    <Border DockPanel.Dock="Top" Padding="16,16,16,20">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Border Width="38" Height="38" CornerRadius="10"
                                    Background="{DynamicResource BgAccent}">
                                <TextBlock Text="&#xE720;" FontFamily="Segoe MDL2 Assets"
                                           FontSize="17" Foreground="{DynamicResource AccentCyan}"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Whisper Voice" FontSize="16" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextWhite}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Sidebar footer -->
                    <StackPanel DockPanel.Dock="Bottom" Margin="12,0,12,12" Spacing="8">
                        <!-- Donate card -->
                        <Border Background="{DynamicResource BgSecondary}" CornerRadius="8"
                                Padding="12,8" Cursor="Hand" Name="DonateCard"
                                PointerPressed="DonateCardClick">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <TextBlock Text="&#xEB51;" FontFamily="Segoe MDL2 Assets"
                                           FontSize="16" Foreground="{DynamicResource Highlight}"
                                           VerticalAlignment="Center"/>
                                <StackPanel Spacing="1">
                                    <TextBlock Text="Support" FontSize="12" FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextWhite}"/>
                                    <TextBlock Text="Buy me a coffee" FontSize="10"
                                               Foreground="{DynamicResource TextMuted}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <!-- Version badge -->
                        <Border Background="{DynamicResource BgAccentDim}" CornerRadius="6"
                                Padding="10,5" HorizontalAlignment="Left">
                            <TextBlock FontSize="11" FontWeight="SemiBold"
                                       Foreground="{DynamicResource AccentCyan}"
                                       Text="{Binding AppVersion, StringFormat='v{0} WhisperVoice'}"/>
                        </Border>
                        <!-- Hotkey hint box -->
                        <Border Background="{DynamicResource BgSecondary}" CornerRadius="8" Padding="12,8">
                            <StackPanel Spacing="2">
                                <TextBlock FontSize="12" Foreground="{DynamicResource TextMuted}">
                                    <Run Text="Press "/>
                                    <Run Text="{Binding HotkeyHint}" FontWeight="Bold"
                                         Foreground="{DynamicResource TextWhite}"/>
                                </TextBlock>
                                <TextBlock Text="to dictate (hold)" FontSize="11"
                                           Foreground="{DynamicResource TextDim}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Navigation (V1 order: Home, History, Notes, Settings) -->
                    <StackPanel DockPanel.Dock="Top" Spacing="2" Margin="8,0">
                        <Button Classes="sidebar active" Name="NavHome" Click="NavHomeClick">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="&#xE80F;" FontFamily="Segoe MDL2 Assets"
                                           FontSize="16" VerticalAlignment="Center"/>
                                <TextBlock Text="Home" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Classes="sidebar" Name="NavHistory" Click="NavHistoryClick">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="&#xE823;" FontFamily="Segoe MDL2 Assets"
                                           FontSize="16" VerticalAlignment="Center"/>
                                <TextBlock Text="History" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Classes="sidebar" Name="NavNotes" Click="NavNotesClick">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets"
                                           FontSize="16" VerticalAlignment="Center"/>
                                <TextBlock Text="Notes" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Classes="sidebar" Name="NavSettings" Click="NavSettingsClick">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets"
                                           FontSize="16" VerticalAlignment="Center"/>
                                <TextBlock Text="Settings" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Spacer -->
                    <Panel/>
                </DockPanel>
            </Border>

            <!-- Content pages -->
            <Panel Grid.Column="1">
                <!-- Home page -->
                <Border Name="HomePage" IsVisible="True">
                    <Grid RowDefinitions="Auto,*,Auto" Margin="32,20,32,20">
                        <!-- Top: Welcome greeting + Stats -->
                        <StackPanel Grid.Row="0">
                            <TextBlock Text="Welcome back" FontSize="26" FontWeight="Bold"
                                       Foreground="{DynamicResource TextWhite}"/>
                            <StackPanel Orientation="Horizontal" Spacing="20" Margin="0,6,0,0">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <TextBlock Text="&#xE720;" FontFamily="Segoe MDL2 Assets" FontSize="13"
                                               Foreground="{DynamicResource TextMuted}" VerticalAlignment="Center"/>
                                    <TextBlock FontSize="13" Foreground="{DynamicResource TextSecondary}" VerticalAlignment="Center">
                                        <Run Text="{Binding TotalRecordings}" FontWeight="SemiBold"
                                             Foreground="{DynamicResource TextWhite}"/>
                                        <Run Text=" Recordings"/>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <TextBlock Text="&#xE8D2;" FontFamily="Segoe MDL2 Assets" FontSize="13"
                                               Foreground="{DynamicResource TextMuted}" VerticalAlignment="Center"/>
                                    <TextBlock FontSize="13" Foreground="{DynamicResource TextSecondary}" VerticalAlignment="Center">
                                        <Run Text="{Binding TotalWords}" FontWeight="SemiBold"
                                             Foreground="{DynamicResource TextWhite}"/>
                                        <Run Text=" Words"/>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <TextBlock Text="&#xE945;" FontFamily="Segoe MDL2 Assets" FontSize="13"
                                               Foreground="{DynamicResource TextMuted}" VerticalAlignment="Center"/>
                                    <TextBlock FontSize="13" Foreground="{DynamicResource TextSecondary}" VerticalAlignment="Center">
                                        <Run Text="Model: "/>
                                        <Run Text="{Binding CurrentModelName}" FontWeight="SemiBold"
                                             Foreground="{DynamicResource TextWhite}"/>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <!-- Center: Mic button card -->
                        <Border Grid.Row="1" Background="{DynamicResource BgSecondary}" CornerRadius="16"
                                Margin="0,16,0,16">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="14">
                                <!-- Clickable mic button with ring effect -->
                                <Button Command="{Binding MicButtonClickCommand}" Background="Transparent"
                                        BorderThickness="0" Cursor="Hand" HorizontalAlignment="Center" Padding="0">
                                    <Panel Width="150" Height="150">
                                        <!-- Outer glow ring (base, always visible) -->
                                        <Ellipse Width="150" Height="150" StrokeThickness="1.5"
                                                 Stroke="{Binding IsRecording, Converter={StaticResource BoolToColor}, ConverterParameter=Highlight|AccentCyan}"
                                                 Opacity="0.15"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <!-- Recording outer glow (pulsing) -->
                                        <Ellipse Width="150" Height="150" StrokeThickness="2"
                                                 Stroke="{DynamicResource Highlight}"
                                                 Classes="ring-pulse-recording" RenderTransformOrigin="50%,50%"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"
                                                 IsVisible="{Binding IsRecording}"/>
                                        <!-- Processing outer glow (pulsing) -->
                                        <Ellipse Width="150" Height="150" StrokeThickness="2"
                                                 Stroke="{DynamicResource AccentBlue}"
                                                 Classes="ring-pulse-processing" RenderTransformOrigin="50%,50%"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"
                                                 IsVisible="{Binding IsProcessing}"/>

                                        <!-- Main ring (color changes with state) -->
                                        <Ellipse Width="120" Height="120" StrokeThickness="2.5"
                                                 Stroke="{Binding IsRecording, Converter={StaticResource BoolToColor}, ConverterParameter=Highlight|AccentCyan}"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <!-- Processing ring overlay -->
                                        <Ellipse Width="120" Height="120" StrokeThickness="2.5"
                                                 Stroke="{DynamicResource AccentBlue}"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"
                                                 IsVisible="{Binding IsProcessing}"/>

                                        <!-- Inner subtle fill -->
                                        <Ellipse Width="116" Height="116"
                                                 Fill="{Binding IsRecording, Converter={StaticResource BoolToColor}, ConverterParameter=MicRingTintRecording|MicRingTintIdle}"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                        <!-- Mic icon -->
                                        <TextBlock Text="&#xE720;" FontFamily="Segoe MDL2 Assets"
                                                   FontSize="36" Foreground="{DynamicResource TextWhite}"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Panel>
                                </Button>

                                <!-- Instruction text -->
                                <TextBlock HorizontalAlignment="Center" FontSize="13"
                                           Foreground="{DynamicResource TextSecondary}">
                                    <Run Text="Click or "/>
                                    <Run Text="{Binding HotkeyHint}" FontWeight="Bold"
                                         Foreground="{DynamicResource TextWhite}"/>
                                    <Run Text=" to dictate"/>
                                </TextBlock>

                                <!-- Status text (red when recording, cyan otherwise) -->
                                <Panel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding StatusText}" FontSize="16" FontWeight="SemiBold"
                                               Foreground="{Binding IsRecording, Converter={StaticResource BoolToColor}, ConverterParameter=Highlight|AccentCyan}"
                                               IsVisible="{Binding !IsProcessing}"/>
                                    <TextBlock Text="{Binding StatusText}" FontSize="16" FontWeight="SemiBold"
                                               Foreground="{DynamicResource AccentBlue}"
                                               IsVisible="{Binding IsProcessing}"/>
                                </Panel>
                            </StackPanel>
                        </Border>

                        <!-- Bottom: Last Transcription section -->
                        <StackPanel Grid.Row="2" Spacing="8">
                            <TextBlock Text="LAST TRANSCRIPTION" FontSize="11" FontWeight="Bold"
                                       Foreground="{DynamicResource TextMuted}" LetterSpacing="1"/>
                            <Border Background="{DynamicResource BgTertiary}" CornerRadius="10"
                                    Padding="16,14" MinHeight="50">
                                <Panel>
                                    <TextBlock Text="{Binding LastTranscription}" FontSize="14"
                                               Foreground="{DynamicResource TextSecondary}"
                                               TextWrapping="Wrap" TextAlignment="Center"
                                               IsVisible="{Binding LastTranscription, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                                    <TextBlock Text="No recordings yet. Press the button or hotkey to start."
                                               FontSize="13" Foreground="{DynamicResource TextDim}"
                                               TextAlignment="Center" FontStyle="Italic"
                                               IsVisible="{Binding LastTranscription, Converter={x:Static StringConverters.IsNullOrEmpty}}"/>
                                </Panel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Settings page -->
                <Border Name="SettingsPage" IsVisible="False" Margin="24" DataContext="{x:Null}" x:DataType="vm:SettingsViewModel" x:CompileBindings="False">
                    <ScrollViewer>
                        <StackPanel Spacing="24" MaxWidth="500">
                            <TextBlock Text="Settings" FontSize="24" FontWeight="Bold"
                                       Foreground="{DynamicResource TextWhite}"/>

                            <!-- Theme -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Theme" FontWeight="SemiBold"/>
                                <ComboBox ItemsSource="{Binding AvailableThemes}"
                                          SelectedItem="{Binding SelectedTheme}"
                                          HorizontalAlignment="Stretch">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate x:DataType="m:ThemeOption">
                                            <StackPanel Orientation="Horizontal" Spacing="10">
                                                <Ellipse Width="16" Height="16" Fill="{Binding PreviewBrush}"/>
                                                <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>

                            <!-- Whisper Model -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Whisper Model" FontWeight="SemiBold"/>
                                <ComboBox ItemsSource="{Binding AvailableModels}"
                                          SelectedItem="{Binding SelectedModel}"
                                          HorizontalAlignment="Stretch"
                                          IsEnabled="{Binding !IsDownloadingModel}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate x:DataType="m:WhisperModelInfo">
                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center"
                                                           FontWeight="SemiBold" MinWidth="120"/>
                                                <Border Background="{DynamicResource BgOverlay}" CornerRadius="4"
                                                        Padding="6,2" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding ApproxSize}" FontSize="11"
                                                               Foreground="{DynamicResource TextSecondary}"/>
                                                </Border>
                                                <Border Background="{DynamicResource BgAccentTint}" CornerRadius="4"
                                                        Padding="6,2" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding VramRequired, StringFormat='VRAM: {0}'}" FontSize="11"
                                                               Foreground="{DynamicResource AccentCyan}" FontWeight="SemiBold"/>
                                                </Border>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <TextBlock Text="{Binding ModelStatus}" FontSize="11"
                                           Foreground="{DynamicResource TextMuted}"
                                           IsVisible="{Binding ModelStatus, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                                <!-- Download button (shown when model is missing) -->
                                <Button Content="Download Model" Classes="primary"
                                        Command="{Binding DownloadModelCommand}"
                                        IsVisible="{Binding IsModelMissing}"/>
                                <!-- Download progress -->
                                <StackPanel Spacing="4" IsVisible="{Binding IsDownloadingModel}">
                                    <TextBlock Text="{Binding ModelDownloadText}" FontSize="11"
                                               Foreground="{DynamicResource AccentCyan}"/>
                                    <ProgressBar IsIndeterminate="True" Height="4"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Language -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Language" FontWeight="SemiBold"/>
                                <ComboBox ItemsSource="{Binding AvailableLanguages}"
                                          SelectedItem="{Binding SelectedLanguage}"
                                          DisplayMemberBinding="{Binding DisplayName}"
                                          HorizontalAlignment="Stretch"/>
                            </StackPanel>

                            <!-- Hotkey -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Hotkey" FontWeight="SemiBold"/>
                                <Grid ColumnDefinitions="*,Auto,Auto">
                                    <TextBlock Text="{Binding HotkeyDisplay}" VerticalAlignment="Center"
                                               FontSize="16" FontWeight="SemiBold"/>
                                    <Button Grid.Column="1" Content="Record" Classes="primary"
                                            Command="{Binding StartRecordingHotkeyCommand}"
                                            IsVisible="{Binding !IsRecordingHotkey}" Margin="8,0,0,0"/>
                                    <Button Grid.Column="2" Content="Cancel"
                                            Command="{Binding CancelRecordingHotkeyCommand}"
                                            IsVisible="{Binding IsRecordingHotkey}" Margin="8,0,0,0"/>
                                </Grid>
                            </StackPanel>

                            <!-- Toggles -->
                            <StackPanel Spacing="12">
                                <CheckBox Content="Push-to-talk (hold hotkey)" IsChecked="{Binding !ToggleMode}"/>
                                <CheckBox Content="Toggle mode (press to start/stop)" IsChecked="{Binding ToggleMode}"/>
                                <CheckBox Content="Auto-paste after transcription" IsChecked="{Binding AutoPaste}"/>
                                <CheckBox Content="Show floating bar" IsChecked="{Binding ShowFloatingBar}"/>
                            </StackPanel>

                            <!-- Updates -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Updates" FontWeight="SemiBold"/>
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <TextBlock Text="{Binding CurrentVersion, StringFormat='Current: v{0}'}"
                                               Foreground="{DynamicResource TextSecondary}" VerticalAlignment="Center"/>
                                    <Button Content="Check for updates" Classes="primary"
                                            Command="{Binding CheckForUpdateCommand}"/>
                                </StackPanel>
                                <StackPanel IsVisible="{Binding UpdateAvailable}" Spacing="4">
                                    <TextBlock Text="{Binding UpdateVersion, StringFormat='Update available: v{0}'}"
                                               Foreground="{DynamicResource Success}"/>
                                    <Button Content="Download and Install" Classes="primary"
                                            Command="{Binding DownloadAndInstallUpdateCommand}"/>
                                    <ProgressBar Value="{Binding UpdateDownloadProgress}"
                                                 IsVisible="{Binding IsDownloadingUpdate}"
                                                 Minimum="0" Maximum="100" Height="4"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- History page -->
                <Border Name="HistoryPage" IsVisible="False" Margin="24">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="History" FontSize="24" FontWeight="Bold"
                                   Foreground="{DynamicResource TextWhite}" Margin="0,0,0,16"/>
                        <TextBlock DockPanel.Dock="Top" Text="No transcriptions yet."
                                   Foreground="{DynamicResource TextSecondary}" FontSize="14"
                                   IsVisible="{Binding !History.Count}"/>
                        <ListBox ItemsSource="{Binding History}" Background="Transparent" BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate x:DataType="m:HistoryEntry">
                                    <Border Background="{DynamicResource BgTertiary}" CornerRadius="8"
                                            Padding="16,12" Margin="0,4">
                                        <StackPanel Spacing="4">
                                            <TextBlock Text="{Binding Text}" TextWrapping="Wrap"
                                                       Foreground="{DynamicResource TextPrimary}"/>
                                            <StackPanel Orientation="Horizontal" Spacing="12">
                                                <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss}'}"
                                                           Foreground="{DynamicResource TextMuted}" FontSize="11"/>
                                                <TextBlock Text="{Binding Duration, StringFormat='{}{0:s\\.f}s'}"
                                                           Foreground="{DynamicResource TextMuted}" FontSize="11"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>
                </Border>

                <!-- Notes page -->
                <Border Name="NotesPage" IsVisible="False" Margin="24" DataContext="{x:Null}" x:DataType="vm:NotesViewModel" x:CompileBindings="False">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="Notes" FontSize="24" FontWeight="Bold"
                                   Foreground="{DynamicResource TextWhite}" Margin="0,0,0,4"/>
                        <TextBlock DockPanel.Dock="Top" Text="For quick thoughts you want to keep"
                                   Foreground="{DynamicResource BgAccent}" FontSize="14" Margin="0,0,0,16"/>

                        <!-- Editor -->
                        <Border DockPanel.Dock="Top" Background="{DynamicResource BgTertiary}"
                                CornerRadius="12" Padding="16" Margin="0,0,0,16">
                            <StackPanel Spacing="8">
                                <TextBox Text="{Binding EditorText}" Watermark="Type a note or dictate with your voice..."
                                         AcceptsReturn="True" MinHeight="60" TextWrapping="Wrap"/>
                                <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                                    <Button Content="Cancel" IsVisible="{Binding IsEditing}"
                                            Command="{Binding CancelEditCommand}"/>
                                    <Button Content="Save" Classes="primary"
                                            Command="{Binding SaveNoteCommand}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Search -->
                        <Grid DockPanel.Dock="Top" ColumnDefinitions="Auto,*" Margin="0,0,0,12">
                            <TextBlock Text="NOTES" FontSize="11" FontWeight="Bold" VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextMuted}" Margin="0,0,16,0"/>
                            <TextBox Grid.Column="1" Text="{Binding SearchText}" Watermark="Search..."
                                     MaxWidth="250" HorizontalAlignment="Right"/>
                        </Grid>

                        <!-- Notes list -->
                        <TextBlock DockPanel.Dock="Top" Text="No notes yet."
                                   Foreground="{DynamicResource TextSecondary}" FontSize="14"
                                   IsVisible="{Binding !FilteredNotes.Count}"/>
                        <ListBox ItemsSource="{Binding FilteredNotes}" Background="Transparent" BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate x:DataType="m:NoteEntry">
                                    <Border Background="{DynamicResource BgTertiary}" CornerRadius="8"
                                            Padding="16,12" Margin="0,4">
                                        <DockPanel>
                                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Spacing="4"
                                                        VerticalAlignment="Top" Margin="12,0,0,0">
                                                <Button Content="&#x270F;" Background="Transparent" BorderThickness="0"
                                                        Foreground="{DynamicResource TextMuted}" Cursor="Hand" Padding="4"
                                                        Command="{Binding $parent[ListBox].((vm:NotesViewModel)DataContext).EditNoteCommand}"
                                                        CommandParameter="{Binding}"/>
                                                <Button Content="&#x1F5D1;" Background="Transparent" BorderThickness="0"
                                                        Foreground="{DynamicResource TextMuted}" Cursor="Hand" Padding="4"
                                                        Command="{Binding $parent[ListBox].((vm:NotesViewModel)DataContext).DeleteNoteCommand}"
                                                        CommandParameter="{Binding}"/>
                                            </StackPanel>
                                            <StackPanel Spacing="4">
                                                <TextBlock Text="{Binding Text}" TextWrapping="Wrap"
                                                           Foreground="{DynamicResource TextPrimary}"/>
                                                <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}"
                                                           Foreground="{DynamicResource TextMuted}" FontSize="11"/>
                                            </StackPanel>
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>
                </Border>
            </Panel>
        </Grid>

        <!-- Status bar -->
        <Border Grid.Row="2" Background="{DynamicResource BgTertiary}" Padding="12,0">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <!-- Device indicator -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <Ellipse Width="8" Height="8" Fill="{DynamicResource Success}"/>
                    <TextBlock Text="{Binding ActiveDevice, StringFormat='Device: {0}'}"
                               FontSize="11" Foreground="{DynamicResource TextSecondary}" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Recording state in status bar -->
                <TextBlock Grid.Column="1" Text="{Binding StatusText}" FontSize="11" Foreground="{DynamicResource TextMuted}"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <!-- Version -->
                <TextBlock Grid.Column="2" Text="{Binding AppVersion, StringFormat='v{0}'}" FontSize="11" Foreground="{DynamicResource TextMuted}" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
