{
  "name": "whisper-voice",
  "version": "1.0.0",
  "description": "Local voice-to-text with OpenAI Whisper",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --win",
    "build:portable": "electron-builder --win portable"
  },
  "keywords": [
    "whisper",
    "voice",
    "speech-to-text",
    "dictation"
  ],
  "author": "AnyAutomation",
  "license": "MIT",
  "dependencies": {
    "extract-zip": "^2.0.1",
    "uiohook-napi": "^1.5.4"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "png-to-ico": "^3.0.1",
    "rcedit": "^5.0.2"
  },
  "build": {
    "appId": "com.local.whisper-voice",
    "productName": "Whisper Voice",
    "extraMetadata": {
      "name": "Whisper Voice",
      "productName": "Whisper Voice"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "scripts/**/*",
      "assets/**/*",
      "build/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "scripts",
        "to": "scripts",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "./build/icon.ico",
      "executableName": "Whisper Voice",
      "artifactName": "Whisper Voice Setup ${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Whisper Voice",
      "installerIcon": "./build/icon.ico",
      "uninstallerIcon": "./build/icon.ico"
    },
    "portable": {
      "artifactName": "WhisperVoice-Portable.exe"
    }
  }
}
